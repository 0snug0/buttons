{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "lib": ["dom", "es6", "es5","es7"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
